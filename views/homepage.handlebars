{{! adds tooltip bar to navigation }}
{{! shows the story but within the container }}

<div class="container">
  <h1 class="align-center">Narratorium</h1>

  <p class="align-center">A collaborative narration playground.
    <br />
    Double-click a place in the story to expound the narrative.
  </p>

  {{#if loggedIn}}{{else}}
    <a href="/login" class="button u-center-block" id="start-btn">Get Started</a>
  {{/if}}

  <h3 class="align-center">
    {{#each stories as |story|}}
      {{story.storyname}}
    {{/each}}
  </h3>

  <div id="quillContainer">
    <div class="container" id="editor-container" data-position="0"></div>
  </div>

  <div id="editBtns">
    <button id="submit">Submit</button>
    <button id="delete">Delete</button>
  </div>

  <button id="beginStory">Begin Story</button>

  <div id="story" class="align-left"></div>

</div>