<div class="container">
    <h2 class="align-center">Sign Up</h2>
    <form class="align-center">
        <div id="status">
            {{!-- Status message generated here --}}
        </div>
        <div>
            <label for="signup-username">Username: </label>
            <input class="form-input" type="text" id="signup-username" />
        </div>
        <div>
            <label for="login-email">Email: </label>
            <input class="form-input" type="text" id="signup-email" />
        </div>
        <div>
            <label for="signup-password">Password: </label>
            <input class="form-input" type="password" id="signup-password" />
        </div>
        <div>
            <label for="signup-confirm">Confirm Password: </label>
            <input class="form-input" type="password" id="signup-confirm" />
        </div>
        <div>
            <button type="submit" id="signup-btn">Sign Up</button>
        </div>
    </form>
</div>

<script src="js/signup.js"></script>