<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/icons8-pen-100.png" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/skeleton.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
    <script src="https://unpkg.com/popper.js@1"></script>
    <script src="https://unpkg.com/tippy.js@5"></script>
    <script defer src="https://cdn.socket.io/4.5.0/socket.io.min.js"
        integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k"
        crossorigin="anonymous"></script>
    <script defer src="js/index.js"></script>
    <title>Narratorium</title>
</head>

<body data-user_id="{{session.user_id}}">
    <header class="navbar row">
        {{!-- Logo --}}
        <div class="two columns align-center">
            <a class="navbar-link" href="/">
                <img src="/images/icons8-pen-100.png" height="70px" width="70px">
            </a>
        </div>

        {{!-- Title --}}
        <div class="eight columns">
            <h1 id="narratorium" class="align-center">Narratorium</h1>
        </div>

        {{! Links to login and signup page }}
        <div id='login-links' class="two columns logx">
            {{#if loggedIn}}
            <a id="logout"><button id="logoutbutton">Logout</button></a>
            {{else}}
            <a class="navbar-link" href="/login">Login</a>
            <a class="navbar-link" href="/signup">Signup</a>
            {{/if}}
        </div>
    </header>

    {{{body}}}
    
    <footer class="footer">
        <a class="navbar-link" href="https://github.com/Corasinth/narratorium">Source Code</a>
        <a class="navbar-link" href="https://icons8.com">Icon by Icon8</a>
    </footer>

    {{!-- Loads logout logic if logged in --}}
    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}

</body>

</html>