<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/icons8-pen-100.png" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/skeleton.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
    <script defer src="https://cdn.socket.io/4.5.0/socket.io.min.js" integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k" crossorigin="anonymous"></script>
    <script defer src="js/index.js"></script>
    <title>Narratorium</title>
  </head>

  <body data-user_id="{{session.user_id}}">
    
    {{! Navbar }}

    <header class="navbar row ">
        <div id="navbar-section-1" class="six columns u-text-center">
          {{! Icon Goes Here }}
            <a class="navbar-title" href="/">
                <img src="/images/icons8-pen-100.png" height="70px" width="70px">
            </a>
        </div>
        <div id="navbar-section-2" class="six columns u-text-center">
          {{! Links to login and signup page }}
          {{#if loggedIn}}
            <a class="" id="logout"><button>Logout</button></a>
          {{else}}
            <a class="navbar-link" href="/login">Login</a>
            <a class="navbar-link" href="/signup">Signup</a>
          {{/if}}
        </div>
    </header>

    {{{body}}}
    <footer>
      <a class="navbar-link" href="https://github.com/Corasinth/narratorium">Source Code!</a>
      <a class="navbar-link" href="https://icons8.com">Icon by Icon8</a>
    </footer>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>